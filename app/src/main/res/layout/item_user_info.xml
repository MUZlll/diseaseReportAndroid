<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.muz1i.diseasereportandroid.bean.UserInfoData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_user_info_bg"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/user_id_content"
            style="@style/UserInfoTextStyle"
            android:text="@{String.valueOf(viewModel.id)}"
            app:layout_constraintEnd_toStartOf="@id/user_name_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_stu_num_content"
            style="@style/UserInfoTextStyle"
            android:text="@{viewModel.studentNum}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@id/user_sex_content"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_name_content"
            style="@style/UserInfoTextStyle"
            android:text="@{viewModel.name}"
            app:layout_constraintEnd_toStartOf="@id/user_sex_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/user_id_content"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_sex_content"
            style="@style/UserInfoTextStyle"
            android:text="@{viewModel.sex}"
            app:layout_constraintEnd_toStartOf="@id/user_stu_num_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/user_name_content"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            app:layout_constraintEnd_toEndOf="@id/user_stu_num_content"
            app:layout_constraintStart_toStartOf="@id/user_name_content"
            app:layout_constraintTop_toBottomOf="@id/user_sex_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PersonalInfoTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="layout_constraintEnd_toStartOf">@+id/vertical_guide_line</item>
    </style>

    <style name="PersonalInfoContentStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="layout_constraintStart_toStartOf">@+id/vertical_guide_line</item>
    </style>

    <style name="UserInfoTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintWidth_percent">0.5</item>
        <item name="hintTextColor">@color/black_wx</item>
        <item name="boxStrokeColor">@color/black_wx</item>
    </style>
</resources>

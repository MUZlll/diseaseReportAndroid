<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiseaseReportAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_wx</item>
        <item name="colorPrimaryVariant">@color/gray_wx</item>
        <item name="colorOnPrimary">@color/gray_deep</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gray_wx</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="statusBarBackground">@color/gray_wx</item>
    </style>

    <style name="ToolBarColor">
        <item name="android:background">@color/gray_wx</item>
    </style>

    <style name="bottomNavStyle">
        <item name="android:background">@color/gray_wx</item>
    </style>

    <style name="textInputColor">
        <item name="boxBackgroundColor">@color/white</item>
    </style>
</resources>

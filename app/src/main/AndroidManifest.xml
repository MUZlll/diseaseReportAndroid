<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.muz1i.diseasereportandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".base.BaseApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DiseaseReportAndroid"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.activity.LoginActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.MainActivity" />
        <activity android:name=".view.activity.UserDetailActivity" />
        <activity android:name=".view.activity.DoctorDetailActivity" />
        <activity android:name=".view.activity.DiseaseCaseDetailActivity" />
        <activity android:name=".view.activity.DiseaseCaseAddActivity" />
        <activity android:name=".view.activity.PublicTaskActivity" />
        <activity android:name=".view.activity.TaskDetailActivity" />
    </application>

</manifest>
